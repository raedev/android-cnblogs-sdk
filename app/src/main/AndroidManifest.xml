<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cnblogs.sdk.demo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CnblogsSdkDemo"
        tools:ignore="HardcodedDebugMode">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.UserApiActivity"
            android:label="用户接口" />
        <activity
            android:name=".activity.ApiDetailActivity"
            android:label="接口详情" />
        <activity android:name=".activity.OAuthWebLoginActivity" />
        <activity android:name=".activity.CategoryApiActivity" />
        <activity android:name=".activity.BlogApiActivity" />
    </application>

</manifest>